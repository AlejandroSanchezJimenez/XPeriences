<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}XPeriences
			{% endblock %}
		</title>
		<link rel="icon" href="{{asset('media/logo.ico')}}">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin=""/>
		<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
		{% block stylesheets %}
			<link rel="stylesheet" href="{{asset('assets/css/home.css')}}">
		{% endblock %}
	</head>
	<body class="d-flex flex-column min-vh-100">
		{% block nav %}
			<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
				<div class="container">
					<a class="navbar-brand" href="#">
						<img src="media/logo.png" width="30" height="30" class="d-inline-block align-top" alt="Logo">
						<span class="h4">XPeriences</span>
					</a>
					{% if app.user %}
						<div class="dropdown">
							<button type="button" class="btn btn-custom dropdown-toggle" data-bs-toggle="dropdown">
								Bienvenido
							</button>
							<ul class="dropdown-menu">
								{% if "ROLE_ADMIN" in app.user.roles %}
									<li>
										<a class="dropdown-item" href="/rutas">Rutas</a>
									</li>
								{% endif %}
								<li>
									<a class="dropdown-item" href="/historial">Mis tours</a>
								</li>
								<li><hr class="dropdown-divider"></li>
								<li>
									<a class="dropdown-item" href="/logout">Cerrar sesión</a>
								</li>
							</ul>
						</div>
					{% else %}
						<button type="button" id="login" class="btn btn-custom" data-bs-toggle="modal" href="#exampleModalToggle">Iniciar sesión</button>
					{% endif %}
				</div>
			</nav>
		{% endblock %}
		{% block body %}
			{% block javascripts %}
				<script src="{{asset('assets/js/jquery-3.7.1.js')}}"></script>
				<script src="{{asset('assets/js/jquery-ui.js')}}"></script>
				<script src="{{asset('assets/js/home.js')}}"></script>
				<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
				<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
			{% endblock %}
		{% endblock %}

		{% block footer %}
			<footer class="bg-light mt-auto">
				<div class="row">
					<div class="col-12 bg-dark text-light text-center py-3">
						<p>&copy; 2024 XPeriences. Todos los derechos reservados.</p>
					</div>
				</div>
			</footer>
		{% endblock %}
	</body>
</html>
